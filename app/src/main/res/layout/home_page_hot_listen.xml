<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">

        <TextView
            style="@style/home_page_hot_title_text"
            android:text="听专题"/>

        <TextView
            android:id="@+id/home_page_hot_more_listen"
            style="@style/home_page_hot_more_text"/>
    </LinearLayout>

    <View style="@style/horizontal_split_black"/>

    <include layout="@layout/empty_classify_d"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/hot_listen_rv"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

    <View style="@style/horizontal_split_wide"/>

</LinearLayout>