    <RelativeLayout
        android:id="@+id/find_friends_wechat"
        style="@style/friend_linear"
        android:visibility="gone">
        <ImageView
            android:id="@+id/find_friends_wechat_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/find_wechat" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/find_friends_wechat_img"
