<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/album_program_rl_layout"
        android:background="@drawable/ll_click_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/album_program_cover"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/photo_two"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:layout_marginLeft="10dp"
            app:riv_border_width="1dp"
            app:riv_border_color="@color/red"
            app:riv_oval="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/album_program_cover"
            android:orientation="vertical">

            <TextView
                android:id="@+id/album_program_name"
                style="@style/search_interface_sub_title"
                android:text="节目标题" />

        </LinearLayout>

        <ImageView
            android:id="@+id/album_program_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/downblue" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/album_program_rl_layout"
        android:orientation="vertical">
        <View style="@style/horizontal_split"/>
    </LinearLayout>

</LinearLayout>



