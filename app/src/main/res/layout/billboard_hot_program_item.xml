<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/billboard_hot_rl_layout"
        android:background="@drawable/ll_click_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/billboard_hot_program_rank"
            style="@style/search_interface_sub_title"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="1" />

        <ImageView
            android:id="@+id/billboard_hot_program_img"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/photo_two" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/billboard_hot_program_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/billboard_hot_program_name"
                style="@style/billboard_interface_sub_title"
                android:text="节目标题" />

            <TextView
                android:id="@+id/billboard_hot_program_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="6dp"
                android:text="作者名"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/billboard_hot_program_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/downblue" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/billboard_hot_rl_layout"
        android:orientation="vertical">
        <View style="@style/horizontal_split"/>
    </LinearLayout>

</RelativeLayout>



