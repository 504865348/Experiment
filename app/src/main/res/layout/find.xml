<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发现"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="@android:color/black"/>
    </RelativeLayout>

    <View style="@style/horizontal_split" />

    <LinearLayout
        android:id="@+id/find_ll_friend_circle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clickable="true"
        android:background="@drawable/ll_click_selector"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/find_friend_circle"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="匠友圈"
            android:textColor="@color/black"
            android:textSize="16dp"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/next_more"/>
    </LinearLayout>

    <View style="@style/horizontal_split" />

    <LinearLayout
        android:id="@+id/find_ll_activity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/ll_click_selector"
        android:clickable="true"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/find_activity" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="活动"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/next_more" />
    </LinearLayout>

    <View style="@style/horizontal_split"/>

</LinearLayout>