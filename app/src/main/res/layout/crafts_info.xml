<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/crafts_image_icon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/album_detail_cover" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/crafts_image_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/crafts_text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名字"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    style="@style/album_detail_intro_small"
                    android:text="分类：" />

                <TextView
                    android:id="@+id/crafts_text_classify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    style="@style/album_detail_intro_small"
                    android:text="热度：" />

                <TextView
                    android:id="@+id/crafts_text_hot_greed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/crafts_text_introduction"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/light_blue"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@android:color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="14dp">
        <Button
            android:id="@+id/crafts_image_follow"
            android:layout_width="124dp"
            android:layout_height="25dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/check_border"
            android:textColor="@color/red"
            android:textSize="12sp"
            android:text="关注" />
        <Button
            android:id="@+id/crafts_image_ask"
            android:layout_width="124dp"
            android:layout_height="25dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/check_border"
            android:textColor="@color/red"
            android:textSize="12sp"
            android:text="向TA提问" />
    </LinearLayout>

</LinearLayout>
