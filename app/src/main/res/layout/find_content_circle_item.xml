<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/friends_circle_item_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/friends_icon"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"/>
    <TextView
        android:id="@+id/friends_circle_item_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginTop="3dp"
        android:textColor="@android:color/black"
        android:text="工匠名"
        android:layout_toRightOf="@id/friends_circle_item_img"/>
    <ImageView
        android:id="@+id/friends_circle_item_v"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/find_v"
        android:layout_toRightOf="@+id/friends_circle_item_name"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/friends_circle_item_introduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小内容小内容小内容小内容小内容"
        android:textSize="14sp"
        android:layout_below="@id/friends_circle_item_img"
        android:layout_alignLeft="@id/friends_circle_item_name"/>

    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@id/friends_circle_item_introduction"
        android:layout_below="@id/friends_circle_item_introduction"
        android:layout_marginTop="10dp"
        android:background="#DDEEFF">

        <ImageView
            android:id="@+id/friends_circle_item_content_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/photo_two" />
        <TextView
            android:id="@+id/friends_circle_item_content_title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginLeft="15dp"
            android:textColor="@android:color/black"
            android:text="标题"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/friends_circle_item_content_img"
            android:layout_toEndOf="@+id/friends_circle_item_content_img"
            android:layout_marginStart="15dp" />
    </RelativeLayout>
</RelativeLayout>