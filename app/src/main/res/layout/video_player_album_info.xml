<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/video_player_album_cover"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            android:src="@drawable/album_cover"/>

        <TextView
            android:id="@+id/video_player_album_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:text="专辑标题"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_share"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:gravity="right"
            android:textColor="@color/red"
            android:text="分享"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/video_player_album_subname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="专辑分集标题"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/video_player_btn_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/btn_buy"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp">

        <TextView
            style="@style/video_player_info_text"
            android:text="播放量: "/>

        <TextView
            android:id="@+id/video_player_times"
            style="@style/video_player_info_text"
            tools:text="XXX"/>

        <TextView
            style="@style/video_player_info_text"
            android:layout_marginLeft="30dp"
            android:text="订阅量: "/>

        <TextView
            android:id="@+id/video_player_publish_time"
            style="@style/video_player_info_text"
            tools:text="XXX"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_collect"
            android:layout_width="124dp"
            android:layout_height="25dp"
            android:layout_margin="20dp"
            android:background="@drawable/check_border"
            android:textColor="@color/red"
            android:textSize="12sp"
            android:text="收藏" />
        <Button
            android:id="@+id/btn_back"
            android:layout_width="124dp"
            android:layout_height="25dp"
            android:layout_margin="20dp"
            android:background="@drawable/check_border"
            android:textColor="@color/red"
            android:textSize="12sp"
            android:text="返回" />

    </LinearLayout>

    <!--<FrameLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="20dp"-->
        <!--android:background="@color/little_gray"/>-->

    <!--<android.support.v7.widget.RecyclerView-->
