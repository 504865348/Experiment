<?xml version="1.0" encoding="utf-8"?>

<!-- 首页顶部导航栏 -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/main_title_bar"/>

    <LinearLayout
        android:id="@+id/home_page_switch_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/home_ll_recommend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_tv_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="推荐"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_ll_hot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_tv_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="热门"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_ll_classify"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_tv_classify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="分类"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_ll_crafts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_tv_crafts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="工匠"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/home_tab_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/checked_red"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/home_page_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

    <View style="@style/horizontal_split"/>

    <!-- 首页内容 -->

</LinearLayout>